<%- include('partials/header') %>

<div class="pricing-header px-3 py-3 pt-md-5 pb-md-4 mx-auto text-center">
    <h2 class="h1 display-4">Modifier les tags du quiz <%= quiz.title  %> </h2>
</div>

<div class="row">
    <div class="col-6 offset-3">
        <% if(locals.addError) { %>
        <div class="row">
            <div class="alert alert-danger"><%= addError %></div>
        </div>
        <% } %> <% if(locals.addSuccess) { %>
        <div class="row">
            <div class="alert alert-success"><%= addSuccess %></div>
        </div>
        <% } %>
        <form action="/quiz/<%= quiz.id %>/addtag" method="POST" class="form-signup">
            <select name="tagID" id="tagID">
                <% for(const tag of tags) { %>
                <option value="<%= tag.id %>"><%= tag.name %></option>
                <% } %>
            </select>

            <button class="btn btn-lg btn-primary btn-block" type="submit">
                Ajouter
            </button>
        </form>
    </div>
</div>
<%- include('partials/footer') %>
