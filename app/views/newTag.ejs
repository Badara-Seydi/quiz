<%- include('partials/header') %>

<div class="pricing-header px-3 py-3 pt-md-5 pb-md-4 mx-auto text-center">
  <h2 class="h1 display-4">Créer un nouveau tag</h2>
</div>

<div class="row">
  <div class="col-6 offset-3">
    <% if(locals.error) { %>
        <div class="row">
          <div class="alert alert-danger">
            <%= error %>
          </div>
        </div>
      <% } %>
      <% if(locals.success) { %>
          <div class="row">
            <div class="alert alert-success">
              <%= success %>
            </div>
          </div>
      <% } %>
    <form action="/tag/newtag" method="POST" class="form-signup">

      <div class="form-label-group">
        <input type="tagName" class="form-control" id="tagName" name="tagName" placeholder="Intitulé du tag">
        <label for="tagName">Intitulé du tag</label>
      </div>

      <button class="btn btn-lg btn-primary btn-block" type="submit">Créer</button>
    </form>
  </div>
</div>
<%- include('partials/footer') %>