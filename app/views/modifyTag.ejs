<%- include('partials/header') %>

<div class="pricing-header px-3 py-3 pt-md-5 pb-md-4 mx-auto text-center">
    <h2 class="h1 display-4">Créer un nouveau tag</h2>
</div>

<div class="row">
    <div class="col-6 offset-3">
        <% if(locals.modifyError) { %>
        <div class="row">
            <div class="alert alert-danger"><%= modifyError %></div>
        </div>
        <% } %> <% if(locals.modifySuccess) { %>
        <div class="row">
            <div class="alert alert-success"><%= modifySuccess %></div>
        </div>
        <% } %>
        <form action="/tag/modifytag" method="POST" class="form-signup">
            <select name="tagID" id="tagID">
                <% for(const tag of tags) { %>
                <option value="<%= tag.id %>"><%= tag.name %></option>
                <% } %>
            </select>

            <div class="form-label-group">
                <input
                    type="tagName"
                    class="form-control"
                    id="tagName"
                    name="tagName"
                    placeholder="Intitulé du tag"
                />
                <label for="tagName">Intitulé du tag</label>
            </div>

            <button class="btn btn-lg btn-primary btn-block" type="submit">
                Modifier
            </button>
        </form>
        <% if(locals.deleteError) { %>
            <div class="row">
                <div class="alert alert-danger"><%= deleteError %></div>
            </div>
            <% } %> <% if(locals.deleteSuccess) { %>
            <div class="row">
                <div class="alert alert-success"><%= deleteSuccess %></div>
            </div>
            <% } %>
        <form action="/tag/deletetag" method="POST" class="form-signup">
            <select name="tagID" id="tagID">
                <% for(const tag of tags) { %>
                <option value="<%= tag.id %>"><%= tag.name %></option>
                <% } %>
            </select>

            <button class="btn btn-lg btn-primary btn-block" type="submit">
                Supprimer
            </button>
        </form>
    </div>
</div>
<%- include('partials/footer') %>
